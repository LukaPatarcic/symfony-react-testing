{% extends 'base.html.twig' %}

{% block title %}Landing Page{% endblock %}

{% block landing_page %}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="{{ asset('/img/bg-cover-1.jfif') }}" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="{{ asset('/img/bg-cover-2.jfif') }}" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="{{ asset('/img/bg-cover-3.jfif') }}" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12" align="center">
            <ul class="bubble">
                <li class="mr-5"><a href="#"><i class="fab fa-js-square fa-5x"></i></a></li>
                <li class="mr-5"><a href="#"><i class="fab fa-symfony fa-5x"></i></a></li>
                <li class="mr-5"><a href="#"><i class="fa fa-code fa-5x"></i></a></li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
