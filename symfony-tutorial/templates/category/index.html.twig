{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.title }}</td>
            <td>{{ category.description }}</td>
            <td>
                <a href="{{ path('category_show',{'id':category.id}) }}" class="btn btn-primary">Show</a>
                <a href="{{ path('category_edit',{'id':category.id}) }}" class="btn btn-warning">Edit</a>
                <a href="{{ path('category_remove',{'id':category.id}) }}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
