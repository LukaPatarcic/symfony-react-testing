{% extends 'base.html.twig' %}

{% block title %}Hello ItemController!{% endblock %}

{% block body %}
    {% for item in items %}
        <div class="row">
            <div class="col-sm-4">
                <img src="{{ asset('/uploads/' ~ item.image) }}">
            </div>
            <div class="col-sm-8 mt-5 pt-5">
                <h1>{{ item.title }}</h1>
                <h3 class="text-muted">{{ item.description }}</h3>
                <ul>
                    <li class="font-weight-bold">Price: <span class="text-success">{{ item.price }}$</span></li>
                    <li class="font-weight-bold">Amount left: {{ item.amount }}</li>
                </ul>
            </div>
        </div>
        <hr>
    {% endfor %}
{% endblock %}
